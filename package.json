{
  "name": "aibot-js",
  "version": "1.0.0",
  "description": "AI-powered Discord bot.",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "check": "biome check ./src",
    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src",
    "start": "pnpm exec pm2 start ./src/main.ts --name aibot-js --interpreter node --node-args=\"--env-file=.env --import=tsx\"",
    "restart": "pnpm exec pm2 restart aibot-js || pnpm run start:pm2",
    "stop": "pnpm exec pm2 stop aibot-js || true",
    "logs": "pnpm exec pm2 logs aibot-js",
    "deploy:commands": "pnpm exec node --env-file=.env --import=tsx ./scripts/deployCommands.ts",
    "dev": "pnpm exec node --env-file=.env --import=tsx ./src/main.ts",
    "db:gen": "pnpm exec drizzle-kit generate",
    "db:migrate": "pnpm exec drizzle-kit migrate",
    "db:push": "pnpm exec drizzle-kit push"
  },
  "license": "BSD-3-Clause",
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.4",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ai-sdk/openai": "3.0.0-beta.47",
    "@google-cloud/secret-manager": "^6.1.1",
    "@libsql/client": "^0.15.15",
    "@resvg/resvg-js": "^2.6.2",
    "ai": "6.0.0-beta.92",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "js-yaml": "^4.1.1",
    "mathjax": "^4.1.0",
    "pm2": "^6.0.14",
    "zod": "^4.2.1"
  }
}
